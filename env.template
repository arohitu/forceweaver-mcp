# ForceWeaver MCP Server Configuration
# Copy this file to .env and fill in your values

# Salesforce Connection (required)
# These are obtained from Salesforce OAuth flow and should be set by the client
SALESFORCE_INSTANCE_URL=https://your-org.my.salesforce.com
SALESFORCE_ACCESS_TOKEN=your_salesforce_access_token
SALESFORCE_REFRESH_TOKEN=your_salesforce_refresh_token
SALESFORCE_ORG_ID=00D000000000000
SALESFORCE_API_VERSION=v64.0

# Salesforce OAuth Application (for token refresh)
SALESFORCE_CLIENT_ID=your_salesforce_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_connected_app_client_secret

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO